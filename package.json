{
  "name": "covid-19",
  "version": "0.8.0",
  "private": true,
  "description": "This is a WebApp to get a overview of new daily cases of covid19",
  "author": "Paul Le Gall",
  "main": "./public/electron.js",
  "homepage": "./",
  "dependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.5.0",
    "@testing-library/user-event": "^7.2.1",
    "bulma": "^0.9.1",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "react-screen-orientation": "0.0.4",
    "react-scripts": "^4.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Creator-360/Covid-19-cases-overview.git"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron": "react-scripts build && electron .",
    "electron-only": "electron .",
    "build-windows": "react-scripts build && electron-packager.cmd ./ covid-19 --platform=win32 --arch=x64 --ignore=./node_modules --asar"
  },
  "build": {
    "productName": "Covid-19",
    "copyright": "Copyright Â© 2020 Paul Le Gall",
    "win": {
      "icon": "./src/img/virus_ico.png" 
    },
    "publish": [{
      "provider": "github"
    }]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "electron": "^10.1.5",
    "electron-builder": "^22.9.1",
    "electron-installer-windows": "^3.0.0",
    "electron-packager": "^15.1.0",
    "electron-updater": "^4.3.5"
  }
}
